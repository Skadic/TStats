---
import "../styles/global.css"
import Layout from "../layouts/Layout.astro";

import TournamentCard from "../components/TournamentCard.astro";
---

<Layout title="Tourney Stats">
	<main class="tourney-list pt-12 m-6 grid grid-cols-2">
		<TournamentCard shorthand="AGT"></TournamentCard>
		<TournamentCard shorthand="TTT"></TournamentCard>
		<TournamentCard shorthand="DM7"></TournamentCard>
	</main>
</Layout>

<style>
	.tourney-list * {
        @apply p-10;
    }
</style>
